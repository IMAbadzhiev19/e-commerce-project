@model ECommerceApp.Models.CartVM
@{
    decimal sum = 0;
}
<head>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
    <link rel="stylesheet" href="~/css/gridcontainer.css" />

    <style>
        .material-symbols-outlined {
            align-self: end;
            font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24
        }

        #fav:hover {
            color: red;
        }

        #cart:hover {
            color: blue;
        }

        #priceShop {
            display: inline;
        }
    </style>

</head>

<div class="justify-content-center w-100">
    @foreach (var pr in Model.Products)
    {
        <div class="card flex-row">
            <img class="card-img-left example-card-img-responsive" src="@pr.ImageUrl" />
            <div class="card-body d-flex flex-row">
                <h4 class="card-title h5 h4-sm p-1">@pr.Title</h4> 
                <p class="card-text p-2">@pr.Price</p>
            </div>
           
            <a class="align-self-center" id="cart" href=@Url.Action($"RemoveFromCart","Product",new{productId = pr.Id})>
                <span class="material-symbols-outlined">
                    close
                </span>
            </a>
        </div>

