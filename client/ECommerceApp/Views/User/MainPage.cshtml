@model ICollection<ECommerceApp.Models.ProductVM>

@{
    ViewData["Title"] = "MainPage";
}

<head>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="stylesheet" href="~/css/gridcontainer.css" />

    <style>
        .material-symbols-outlined {
            align-self: end;
            font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24
        }

        #fav:hover {
            color: red;
        }

        #cart:hover {
            color: blue;
        }

        #priceShop {
            display: inline;
        }
    </style>

</head>


<div id="carouselExample" class="carousel slide">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSYA-lcEF8o2k3oRLjsCOma2B8EbkEVzk0W0A&usqp=CAU" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSYA-lcEF8o2k3oRLjsCOma2B8EbkEVzk0W0A&usqp=CAU" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSYA-lcEF8o2k3oRLjsCOma2B8EbkEVzk0W0A&usqp=CAU" class="d-block w-100" alt="...">
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
<br>
<br>
<br>
<br>
<div class="gridcontainer">
    @foreach (var pr in Model)
    {
        <div class="mb-2">
            <div class="card" style="width: 18rem;">
                <a href="@Url.Action("MainPage")">
                    <img src="https://cdn.ozone.bg/media/catalog/product/f/i/figura_funko_pop_animation_naruto_shippuden_naruto_uzumaki_kurama_link_mode_special_edition_1465_1699601387_0.jpg" class="card-img-top w-100 h-50" alt="">
                </a>

                <div class="card-body">
                    <h5 class="card-title">@pr.Title</h5>

                    <a id="fav" href="@Url.Action($"AssignToWishList","Product",new {productId = pr.Id})">
                        <span id="heart" class="material-symbols-outlined">
                            favorite
                        </span>
                    </a>

                    <a id="cart" href="@Url.Action("AssignToCart","Product", new{productId = pr.Id})">
                        <span class="material-symbols-outlined">
                            shopping_cart
                        </span>
                    </a>

                    <p class="card-text">@pr.Price</p>

                </div>
            </div>
        </div>
    }
</div>
