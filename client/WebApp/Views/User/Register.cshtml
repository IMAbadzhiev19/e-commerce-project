@model WebApp.ModelView.UserMV

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CVGenius</title>
    <link rel="stylesheet" href="lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="css/site.css" asp-append-version="true" />
</head>
<body>
    <form method = "post" asp-controller="/User" asp-action="/CreateUser">
        <div>
            <lable for="UserName" class="form-label">User name</lable>
            <input type="text" asp-for="UserName" id="userName" />
        </div>

        <div>
            <lable for="FirstName" class="form-label">First name</lable>
            <input type="text" asp-for="FirstName" id="firstName" />
        </div>

        <div>
            <lable for="LastName" class="form-label">Last name</lable>
            <input type="text" asp-for="LastName" id="lastName" />
        </div>
        <div>
            <lable for="Email" class="form-label">Email</lable>
            <input type="email" asp-for="Email" id="email" />
        </div>

        <div>
            <lable for="PhoneNumber" class="form-label">Phone number</lable>
            <input type="number" asp-for="PhoneNumber" id="phoneNumber" />
        </div>
        <div>
            <lable for="Password" class="form-label">Password</lable>
            <input type="password" class="form-control" asp-for="Password" id="password" />
        </div>

        <button class="btn btn-primary" name="submit" type="submit">Sign in</button>
    </form>

    <script src="lib/jquery/dist/jquery.min.js"></script>
    <script src="lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="js/site.js" asp-append-version="true"></script>
</body>
</html>